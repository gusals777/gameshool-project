
<style>
.jumbotron
{ min-height: 300px;
  width: 300px;
  color:black;
  background: #ffffff;
  background: rgba(255, 255, 255, 0.5);
  }
 
</style>
<center>
<body style="background-image:url('http://www.ucorean.com/files/attach/images/3959561/691/787/008/peaceful_summer_day-1920x1080.jpg'); background-size:cover;">
 <br><br><br><br>
 


<div class="container">
<div class="jumbotron">

<h2>로그인</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "이메일" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, "비밀 번호" %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "비밀번호를 기억합니다" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "로그인" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>


</div>




</body>
</center>
