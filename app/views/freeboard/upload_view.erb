<body style="background-image:url('http://www.ucorean.com/files/attach/images/3959561/691/787/008/peaceful_summer_day-1920x1080.jpg'); background-size:cover;">


        <%=render :partial =>"game_page/fixed_bar" %><br><br><br><br>

    <div class="container">
        <div container>
            <div class="row">
                <div class="col-md-3">
                    
                </div>
                <div class="col-md-6">
                
                    <div class="jumbotron">
                   <h2>Freeboard</h2><br><br>
                   TITLE
                    <div style="padding-top:1px; padding-bottom:1px; background:rgba(80,80,80,0.5); align:center">
                        <center><h3><%= @one_fb.fb_title %></h3></center>
                      </div>  
                        <br><br>
                        CONTENT
                        <div style="padding-top:1px; padding-bottom:1px; background:rgba(80,80,80,0.5); align:center"><br>
                        <center><p class="lead"><%= @one_fb.fb_content %></p></center><br><br>
                        
                        <center>
                            
                            </div>
                            
                            <% @one_fb.replies.each do |r| %>
                             
                                <div class="<%= r.id %>">  
                                
                                    <p style="text-align:center"><h6>이름 : <%= r.rp_name %><br>내용 : <%= r.rp_content %> 
                                    </h6> </p>
                                    
                                </div>
                                <div class="<%= r.id %>" style="display :none">
                                    
                                        <textarea name="rp_content"></textarea>
                                        <input type="submit" value='확인'></button>
                                        <input type="hidden" name="rp_id" value="<%= r.id %>">
                                        
                                </div>
                                
                                <form  action="/freeboard/reply_delete" method="GET">
                                    <input type="hidden" name="rp_id" value="<%= r.id %>">
                                    <input type="submit" value="삭제">
                                    
                                </form>
                                
                                
                                <button href="#" id="update_button<%= r.id %>">수정</button>
                                
                            
                                <script>
                                
                                    $(function(){
                                        $("#update_button<%= r.id%>").click(function(){
                                            //수정 버튼 클릭했을때
                                         
                                        <% if current_user.name == r.rp_name %>
                                            
                                            $(".<%= r.id %>" ).show();
                                            
                                        <% else %>
                                            
                                            
                                        
                                        <% end %>
                                            
                                            });
                                    });
                                </script>
                            <% end %>
                  
                          <br><br>
                            <%= form_tag("/freeboard/reply_write", method: "post") do %>
                                <% if user_signed_in? %>
                                    작성자 : <%= current_user.name %> 
                                <% end %><br>
                                
                                <textarea type="text" name="rp_content"  placeholder="리플을 달아주세요" rows="4" cols="59"></textarea><br>
                                <input type="hidden" name="freeboard_id" value="<%= @one_fb.id %>">
                                <input type="hidden" name="rp_name" value="<%= current_user.name %>">
                                <input type="hidden" name="rp_hakbun" value="<%= current_user.hakbun %>">
                                <input type="submit" value="댓글달기"><br>
                                
                               
                                <a href="/freeboard/delete?id=<%= @one_fb.id %>">삭제쓰</a>&nbsp;
                                <a href="/freeboard/modify?id=<%= @one_fb.id %>">수정쓰</a>
                            <% end %>
                        </center>
                    </div>
                </div>
            </div>
        </div>
    </div>


