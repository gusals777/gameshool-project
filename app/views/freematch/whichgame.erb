    <header class="intro-header" style="background-image: url('http://gameabout.com/files/attach/images/111/602/031/003/14efe2cc5f78fd67b7c201cc88fdf200.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                     <div class="site-heading">
                     
                        <h1>Match Up</h1>
                        <hr>
                        <span class="subheading"><strong>대전중인 팀을 볼 수 있어요!</strong></span>
                     
                    </div>
                </div>
            </div>
        </div>
    </header>

  
  
<!-- 모든 그리드 시작 -->  
  
  <!-- 롤 랭킹 그리드 -->
  <div class="content-section-a">
    <div class="container">
      <div class="row">
        
        <div class="col-lg-4 col-md-4 col-sm-6">
         
          <img class="img-responsive" src="http://www.op.gg/r/outImage/https://cdn.leagueoflegends.com/match-history/opengraph_icon.jpg" alt="">
        </div>
         <div class="col-lg-8 col-md-8 col-sm-6">
          <font2><font size="5px">LOL 대전현황</font></font2>
          <hr class="section-heading-spacer">
          <div class="clearfix"></div>
          <div class="scroll">
          
   <% @whichgame_lol.each do |which| %>
   
      <% if which.lol_mode == false %>
          <font size="5px"><font2><%= which.lol_whichgame_my_teamname %></font2></font> vs <font size="5px"><font2><%= which.lol_whichgame_opposing_teamname %></font2></font>님이 <font color="bluc" size="4px">대결중</font> 입니다.
          <a href="/freematch/whichgame_info?kind_of_game=lol&which_id=<%= which.id %>">자세히 보기</a><br>
      <% end %>
   <% end %>
         </div>
         
        </div>

        
      </div>
    </div>  
  </div>
  <br><br><br>
  <!-- 피파 랭킹 그리드 -->
  <div class="content-section-b">
    <div class="container">
      <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-6">
        
          <img class="img-responsive" src="http://gamebunch.net/wp-content/uploads/2014/06/FIFA-%EC%98%A8%EB%9D%BC%EC%9D%B8-3_%EB%8C%80%ED%91%9C-%EC%9D%B4%EB%AF%B8%EC%A7%801-672x372.jpg" alt="">
        </div>
        <div class="col-lg-8 col-md-8 col-sm-6">
        <font2><font size="5px">피파온라인3 대전현황</font></font2>
          <hr class="section-heading-spacer">
          <div class="clearfix"></div>
              <div class="scroll">
   <% @whichgame_fifa.each do |which| %>
   
       <% if which.fifa_mode == false %>
        <font size="5px"><font2><%= which.fifa_whichgame_my_teamname %></font2></font> vs <font size="5px"><font2><%= which.fifa_whichgame_opposing_teamname %></font2></font>님이 <font color="bluc" size="4px">대결중</font> 입니다.
        <a href="/freematch/whichgame_info?kind_of_game=fifa&which_id=<%= which.id %>">자세히 보기</a><br>
       <% end %>  
       
   <% end %>
         </div>
        </div>
  

        
      </div>
    </div>
  </div>
  <br><br><br>
  <!-- 하스스톤 랭킹 그리드 -->
  <div class="content-section-a">
    <div class="container">
      <div class="row">
        
        <div class="col-lg-4 col-md-4 col-sm-6">
         
          <img class="img-responsive"  src="http://i1.daumcdn.net/thumb/R750x0/?fname=http%3A%2F%2Fcfile29.uf.tistory.com%2Fimage%2F233E4A4C55700EB21A0CD7" alt="">
        </div>
        <div class="col-lg-8 col-md-8 col-sm-6">
         <font2><font size="5px">하스스톤 대전현황</font></font2>
          <hr class="section-heading-spacer">
          <div class="clearfix"></div>
       <div class="scroll">     
   <% @whichgame_hearthstone.each do |which| %>
     <% if which.hearthstone_mode == false %>
       <font size="5px"><font2> <%= which.hearthstone_whichgame_my_teamname %></font2></font> vs <font size="5px"><font2><%= which.hearthstone_whichgame_opposing_teamname %></font2></font>님이 <font color="bluc" size="4px">대결중</font> 입니다.
        <a href="/freematch/whichgame_info?kind_of_game=hearthstone&which_id=<%= which.id %>">자세히 보기</a><br>
     <% end %>  
   <% end %>
       </div>
         
        </div>
        
       
        
        
        
      </div>
    </div>
  </div>
  
  
